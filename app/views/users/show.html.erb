<%= content_for :content do %>
 <h3>Profile</h3>

    <%= form_for(@user) do |f| %>
        <%= f.label :name %>
        <%= @user.name %>
        <%= f.label :email %>
        <%= @user.email %>
        <%= f.label :balance %>
        <%= @user.balance %>
    <% end %>
    <%= gravatar_for @user %>
<% end %>